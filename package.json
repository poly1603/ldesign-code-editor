{
  "name": "@ldesign/code-editor",
  "version": "1.0.0",
  "description": "A high-performance, framework-agnostic code editor based on Monaco Editor",
  "type": "module",
  "main": "./dist/code-editor.umd.js",
  "module": "./dist/code-editor.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/code-editor.es.js",
      "require": "./dist/code-editor.umd.js"
    },
    "./vue": {
      "types": "./dist/vue/index.d.ts",
      "import": "./dist/vue.es.js",
      "require": "./dist/vue.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "preview": "vite preview",
    "dev:vanilla": "cd examples/vanilla-demo && pnpm dev",
    "dev:vue": "cd examples/vue-demo && pnpm dev"
  },
  "keywords": [
    "monaco-editor",
    "code-editor",
    "editor",
    "typescript",
    "vue",
    "framework-agnostic"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "monaco-editor": "^0.52.0",
    "vue": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "monaco-editor": "^0.52.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vite-plugin-dts": "^4.3.0",
    "vue": "^3.5.13"
  },
  "dependencies": {}
}
