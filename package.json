{
  "name": "@ldesign/code-editor",
  "version": "2.0.0",
  "description": "Enterprise-grade, AI-powered, feature-complete code editor platform based on Monaco Editor",
  "type": "module",
  "main": "./dist/code-editor.umd.js",
  "module": "./dist/code-editor.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/code-editor.es.js",
      "require": "./dist/code-editor.umd.js"
    },
    "./vue": {
      "types": "./dist/vue/index.d.ts",
      "import": "./dist/vue.es.js",
      "require": "./dist/vue.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "build:strict": "tsc --project tsconfig.strict.json && vite build",
    "preview": "vite preview",
    "dev:vanilla": "cd examples/vanilla-demo && pnpm dev",
    "dev:vue": "cd examples/vue-demo && pnpm dev",
    "lint": "eslint src --ext .ts,.vue --fix",
    "format": "prettier --write \"src/**/*.{ts,vue,json}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "monaco-editor",
    "code-editor",
    "editor",
    "typescript",
    "vue",
    "react",
    "framework-agnostic",
    "ai-completion",
    "collaboration",
    "real-time",
    "debugger",
    "file-system",
    "extensions",
    "performance",
    "enterprise"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "monaco-editor": "^0.52.0",
    "vue": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/ui": "^1.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.20.0",
    "monaco-editor": "^0.52.0",
    "prettier": "^3.2.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^1.0.0",
    "vue": "^3.5.13"
  },
  "dependencies": {}
}
