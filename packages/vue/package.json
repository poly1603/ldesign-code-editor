{
  "name": "@ldesign/code-editor-vue",
  "version": "1.0.0",
  "description": "Vue 3 components for code editor based on Monaco Editor",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "type-check": "vue-tsc --noEmit"
  },
  "keywords": [
    "monaco-editor",
    "code-editor",
    "vue",
    "vue3",
    "typescript"
  ],
  "license": "MIT",
  "peerDependencies": {
    "monaco-editor": "^0.52.0",
    "vue": "^3.3.0"
  },
  "dependencies": {
    "@ldesign/code-editor-core": "workspace:*"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.1",
    "monaco-editor": "^0.52.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vite-plugin-dts": "^4.3.0",
    "vue": "^3.5.13",
    "vue-tsc": "^2.1.10"
  }
}
