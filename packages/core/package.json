{
  "name": "@ldesign/code-editor-core",
  "version": "1.0.0",
  "description": "Core functionality for code editor based on Monaco Editor",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
