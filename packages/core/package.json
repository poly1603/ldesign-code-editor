  "keywords": [
    "monaco-editor",
    "code-editor",
    "editor",
    "typescript"
  ],
  "license": "MIT",
  "peerDependencies": {
    "monaco-editor": "^0.52.0"
  },
  "devDependencies": {
    "monaco-editor": "^0.52.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vite-plugin-dts": "^4.3.0"
  }
